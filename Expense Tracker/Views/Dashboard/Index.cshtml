@{
    ViewData["isDashboard"] = true;
}

@*Summary Widget*@
<div class="row mb-4">
    <div class="col-md-4">
    <div class="d-flex flex-row widget summary income">
        <div class="d-flex flex-column justify-content-center p-5">
            <i class="fa-solid fa-dollar-sign fa-xl"></i>
        </div>
        <div class="d-flex flex-column m-auto py-3">
            <span class="lead">Total Income</span>
            <h5 class="display-6 fw-bold">@ViewBag.TotalIncome</h5>
        </div>
    </div>
    </div>
   <div class="col-md-4">
    <div class="d-flex flex-row widget summary expanse">
        <div class="d-flex flex-column justify-content-center p-5">
            <i class="fa-solid fa-dollar-sign fa-xl"></i>
        </div>
        <div class="d-flex flex-column m-auto py-3">
            <span class="lead">Total Expense</span>
            <h5 class="display-6 fw-bold">@ViewBag.TotalExpense</h5>
        </div>
    </div>
    </div>
    <div class="col-md-4">
    <div class="d-flex flex-row widget summary balance">
        <div class="d-flex flex-column justify-content-center p-5">
            <i class="fa-solid fa-dollar-sign fa-xl"></i>
        </div>
        <div class="d-flex flex-column m-auto py-3">
            <span class="lead">Balance</span>
            <h5 class="display-6 fw-bold">@ViewBag.Balance</h5>
            
        </div>
    </div>
    </div>
</div>